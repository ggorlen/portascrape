{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "target": "ES5",
    "lib": ["es5", "es6", "dom"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": [
    "./**/*.js"
  ],
  "verbose": true
}
